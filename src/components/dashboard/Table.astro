---
interface Props {
  typeForm: 'ingreso' | 'gasto'
}

const { typeForm } = Astro.props
---
<div class="relative max-w-xl m-auto mb-6 table-fixed overflow-x-auto shadow-md sm:rounded-lg">
  <table class="w-full text-sm text-left rtl:text-right text-gray-500 dark:text-gray-400">
      <thead class="text-xs text-gray-700 uppercase bg-gray-50 dark:bg-gray-700 dark:text-gray-400">
          <tr>
              <th scope="col" class="px-4 py-3">
                  Monto
              </th>
              <th scope="col" class="px-4 py-3">
                  Categoría
              </th>
              <th scope="col" class="px-4 py-3">
                  Descripción
              </th>
              <th scope="col" class="px-4 py-3">
                  Fecha
              </th>
          </tr>
      </thead>
      <tbody id=`table-body-${typeForm}`></tbody>
  </table>
</div>
