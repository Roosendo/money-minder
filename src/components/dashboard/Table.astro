---
interface Props {
  typeForm: 'ingreso' | 'gasto'
}

const { typeForm } = Astro.props
---

<div class='relative m-auto mb-6 max-w-xl overflow-x-auto rounded-lg shadow-md'>
  <table class='min-w-full text-left text-sm text-gray-500 dark:text-gray-400'>
    <thead class='bg-gray-50 text-xs uppercase text-gray-700 dark:bg-gray-700 dark:text-gray-400'>
      <tr>
        <th scope='col' class='px-4 py-3'>Monto</th>
        <th scope='col' class='px-4 py-3'>Categoría</th>
        <th scope='col' class='px-4 py-3'>Descripción</th>
        <th scope='col' class='px-4 py-3'>Fecha</th>
      </tr>
    </thead>
    <tbody id=`table-body-${typeForm}`></tbody>
  </table>
</div>
