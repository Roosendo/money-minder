---
interface Props {
  alertId?: string
  alertMessage: string
  typeAlert: 'success' | 'warning'
}

let { alertId, alertMessage, typeAlert } = Astro.props

if (!alertId) {
  alertId = 'alert'
}
---

{
  typeAlert === 'warning' && (
    <div id={alertId} class="animate-blurred-fade-in hidden items-center p-4 my-6 text-yellow-800 border-t-4 border-yellow-300 bg-yellow-50 dark:text-yellow-300 dark:bg-gray-800 dark:border-yellow-800 rounded" role="alert">
      <svg class="flex-shrink-0 size-4" aria-hidden="true" fill="currentColor" viewBox="0 0 20 20">
        <path d="M10 .5a9.5 9.5 0 1 0 9.5 9.5A9.51 9.51 0 0 0 10 .5ZM9.5 4a1.5 1.5 0 1 1 0 3 1.5 1.5 0 0 1 0-3ZM12 15H8a1 1 0 0 1 0-2h1v-3H8a1 1 0 0 1 0-2h2a1 1 0 0 1 1 1v4h1a1 1 0 0 1 0 2Z"/>
      </svg>
      <p class="ms-3 text-sm font-medium">
        {alertMessage}
      </p>
    </div>
  )
}

{
  typeAlert === 'success' && (
    <div id={alertId} class="animate-blurred-fade-in hidden items-center p-4 mb-4 text-green-800 border-t-4 border-green-300 bg-green-50 dark:text-green-400 dark:bg-gray-800 dark:border-green-800" role="alert">
      <svg class="flex-shrink-0 w-4 h-4" aria-hidden="true" fill="currentColor" viewBox="0 0 20 20">
        <path d="M10 .5a9.5 9.5 0 1 0 9.5 9.5A9.51 9.51 0 0 0 10 .5ZM9.5 4a1.5 1.5 0 1 1 0 3 1.5 1.5 0 0 1 0-3ZM12 15H8a1 1 0 0 1 0-2h1v-3H8a1 1 0 0 1 0-2h2a1 1 0 0 1 1 1v4h1a1 1 0 0 1 0 2Z"/>
      </svg>
      <p class="ms-3 text-sm font-medium">
        {alertMessage}
      </p>
    </div>
  )
}