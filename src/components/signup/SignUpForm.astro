---
import AlertMessage from './AlertMessage.astro'
---

<form class="max-w-md mx-auto my-10 p-4">
  <AlertMessage alertId="alert-error-user" alertMessage="Error al registrar usuario, intente de nuevo" typeAlert="warning" />
  <div class="mb-5">
    <label for="name" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Tú nombre</label>
    <input type="text" id="name" class="shadow-sm bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500 dark:shadow-sm-light" placeholder="Andrés" required />
  </div>
  <div class="mb-5">
    <label for="lastname" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Tú apellido</label>
    <input type="text" id="lastname" class="shadow-sm bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500 dark:shadow-sm-light" placeholder="Cuccittini" required />
  </div>
  <div class="mb-5">
    <label for="email" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Tú email</label>
    <input type="email" id="email" class="shadow-sm bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500 dark:shadow-sm-light" placeholder="andres@email.com" required />
  </div>
  <AlertMessage alertId="alert-email" alertMessage="Digite un correo válido" typeAlert="warning" />
  <div class="mb-5">
    <label for="password" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Tú contraseña</label>
    <input type="password" id="password" class="shadow-sm bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500 dark:shadow-sm-light" required />
  </div>
  <div class="mb-5">
    <label for="repeat-password" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Repite la contraseña</label>
    <input type="password" id="repeat-password" class="shadow-sm bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500 dark:shadow-sm-light" required />
  </div>
  <AlertMessage alertId="alert-passwords" alertMessage="Las contraseñas no coinciden" typeAlert="warning" />
  <div class="flex items-start mb-5">
    <div class="flex items-center h-5">
      <input id="terms" type="checkbox" value="" class="w-4 h-4 border border-gray-300 rounded bg-gray-50 focus:ring-3 focus:ring-blue-300 dark:bg-gray-700 dark:border-gray-600 dark:focus:ring-blue-600 dark:ring-offset-gray-800 dark:focus:ring-offset-gray-800" required />
    </div>
    <label for="terms" class="ms-2 text-sm font-medium text-gray-900 dark:text-gray-300">Estoy de acuerdo con los <a href="/#terms-conds" class="text-blue-600 hover:underline dark:text-blue-500">terminos y condiciones.</a></label>
  </div>
  <AlertMessage alertId="alert-terms-conds" alertMessage="Debes aceptar los términos y condiciones" typeAlert="warning" />
  <AlertMessage alertId="alert-duplicate" alertMessage="El usuario ya existe" typeAlert="warning" />
  <AlertMessage alertId="alert-success" alertMessage="Registrado con exito" typeAlert="success" />
  <button type="submit" class="text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800">Registrar nueva cuenta</button>
</form>

<script>
  import validator from 'validator'
  import { showAndHideAlert } from '@utils/alerts'
  import { signUpUser } from '@utils/signup-user'

  const alertErrorUser = document.querySelector('#alert-error-user') as HTMLDivElement
  const alertEmail = document.querySelector('#alert-email') as HTMLDivElement
  const alertPasswords = document.querySelector('#alert-passwords') as HTMLDivElement
  const alertTermsConds = document.querySelector('#alert-terms-conds') as HTMLDivElement
  const alertDuplicate = document.querySelector('#alert-duplicate') as HTMLDivElement
  const alertSuccess = document.querySelector('#alert-success') as HTMLDivElement

  const form = document.querySelector('form')
  form?.addEventListener('submit', async (e) => {
    e.preventDefault()
    const name = (form.querySelector('#name') as HTMLInputElement).value
    const lastname = (form.querySelector('#lastname') as HTMLInputElement).value
    const email = (form.querySelector('#email') as HTMLInputElement).value
    const password = (form.querySelector('#password') as HTMLInputElement).value
    const repeatPassword = (form.querySelector('#repeat-password') as HTMLInputElement).value
    const terms = (form.querySelector('#terms') as HTMLInputElement).checked

    if (name === '' || lastname === '' || email === '' || password === '' || repeatPassword === '') {
      return showAndHideAlert(alertErrorUser)
    }
    if (!validator.isEmail(email)) {
      return showAndHideAlert(alertEmail)
    }
    if (password !== repeatPassword) {
      return showAndHideAlert(alertPasswords)
    }
    if (!terms) {
      return showAndHideAlert(alertTermsConds)
    }

    const apiBody = {
      name,
      lastname,
      email,
      password
    }

    const apiResponse = await signUpUser(apiBody)

    if (typeof apiResponse === 'boolean') {
      return apiResponse && showAndHideAlert(alertSuccess)
    }

    if (typeof apiResponse === 'number' && apiResponse === 409) {
      return showAndHideAlert(alertDuplicate)
    } else if (typeof apiResponse === 'number' && apiResponse === 400) {
      return showAndHideAlert(alertErrorUser)
    }

    return showAndHideAlert(alertErrorUser)
  })
</script>
